<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE agent SYSTEM "../../../config/dtd/agent.dtd">
<agent dtd_version="1.0">
    <metadata>
        <name>TestAgent</name>
        <type category="foundation">inhibitor</type>
        <version>1.0</version>
        <timing>
            <response_interval unit="seconds">30</response_interval>
        </timing>
        <service>
            <provider>anthropic</provider>
            <model>claude-3-opus-20240229</model>
            <api_version>2024-02-15</api_version>
        </service>
    </metadata>
    <objectives>
        <primary>Filter inappropriate content</primary>
        <secondary>Maintain conversation flow</secondary>
        <metrics>
            <metric>Response accuracy</metric>
        </metrics>
    </objectives>
    <styles>
        <communication_style>
            <aspect>Direct</aspect>
        </communication_style>
        <analytical_style>
            <aspect>Rule-based</aspect>
        </analytical_style>
    </styles>
    <constraints>
        <operational>Rate limiting</operational>
        <technical>API limits</technical>
    </constraints>
    <counterparty_perception>
        <assumption>User expects quick responses</assumption>
        <adaptation_strategy>Adjust to user context</adaptation_strategy>
    </counterparty_perception>
    <momentum>
        <sequence id="init" type="initialization" temperature="0.1">
            <message position="0">
                <role type="system"/>
                <content>Initialize test sequence</content>
            </message>
        </sequence>
        <sequence id="recovery" type="recovery" temperature="0.7">
            <message position="0">
                <role type="user"/>
                <content>Test recovery message. Recover momentum</content>
            </message>
        </sequence>
    </momentum>
    <communication>
        <input>
            <message_format>
                <schema>text</schema>
            </message_format>
            <analysis_points>
                <point>Content</point>
            </analysis_points>
            <history>
                <lru_cache>
                    <threads max_count="100">
                        <context length="10"/>
                    </threads>
                </lru_cache>
            </history>
        </input>
        <output>
            <format>text</format>
            <style>
                <tone>Professional</tone>
                <persona>Assistant</persona>
            </style>
        </output>
    </communication>
    <behavior>
        <core_function>Content filtering</core_function>
        <methodology>
            <step>Analyze input</step>
            <step>Apply rules</step>
            <step>Generate response</step>
        </methodology>
    </behavior>
</agent> 